{{!-- 	single_project_template.handlebars 

	Single Project
--}}


<tr class=" project_root_container_jq ">

	<td style="padding-right: 10px;"> {{!-- Same padding-right as <td> above element with id "new_project_expand_link" in JSP --}}
	 <div style="text-align: center;" >
		{{#if projectLocked }}
			<img class=" selector_tool_tip_attached  fake-link-image icon-small " title="Project is locked" src="static/images/icon-locked.png" >
		{{else}}
			{{!-- 	"x" icon should only appear if they're admins for that project/have permission to delete it and the project isn't locked --}}
			{{#if canDelete }}
				<img class=" delete_project_link_jq selector_tool_tip_attached  fake-link-image icon-small " title="Delete Project"
						data-tooltip="Delete project" src="static/images/icon-circle-delete.png" >
			{{/if}}			
		{{/if}}
	 </div>
	</td>
	<td>
        {{!-- "Tags" before the Project Title if  applicable  --}}
        {{!--  Project is Public --}}
        {{#if projectPublic }}
            <span class=" standard-border-color-very-dark  standard-background-color-very-dark "
                  style="margin-right: 10px;  padding: 3px; border-radius: 5px;"
            >Public</span>
        {{else}}
        {{!-- 	Reviewer Mode is Enabled --}}
            {{#if projectPublicAccessEnabled }}
                <span class=" standard-border-color-very-dark  standard-background-color-very-dark "
                      style="margin-right: 10px;  padding: 3px; border-radius: 5px;"
                >Reviewer Mode</span>
            {{/if}}
        {{/if}}

        {{!--  Link to Project  --}}
        <a href="d/pg/project/{{ id }}">
            {{!--  Project Title --}}
            {{ title }}
        </a>
	</td>
</tr>